<!DOCTYPE html>
<html>
  <head>
    <title>Sửa thông tin giáo viên</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f8f8f8;
        margin: 0;
        padding: 0;
      }
      h1 {
        background-color: #337ab7;
        color: white;
        padding: 10px;
      }
      form {
        width: 400px;
        margin: 20px auto;
        padding: 50px;
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      label,
      input {
        display: block;
        margin-bottom: 10px;
      }
      input[type='text'],
      input[type='department'],
      input[type='email'] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 16px;
      }
      input[type='submit'] {
        background-color: #337ab7;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <h1>Sửa thông tin giáo viên</h1>
    <form id="edit-form">
      <input
        type="hidden"
        name="id"
        value="<%= lecturer.id %>"
      />
      <label for="firstName">Họ:</label>
      <input
        type="text"
        id="firstName"
        name="firstName"
        value="<%= lecturer.firstName %>"
        required
      /><br />
      <label for="lastName">Tên:</label>
      <input
        type="text"
        id="lastName"
        name="lastName"
        value="<%= lecturer.lastName %>"
        required
      /><br />
      <label for="username">Tên đăng nhập:</label>
      <input
        type="text"
        id="username"
        name="username"
        value="<%= lecturer.username %>"
        required
      /><br />
      <label for="password">Mật khẩu:</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= lecturer.password %>"
        required
      /><br />
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= lecturer.email %>"
        required
      /><br />
      <label for="department">Department:</label>
      <input
        type="department"
        id="department"
        name="department"
        value="<%= lecturer.department %>"
        required
      /><br />
      <label for="phone">Số điện thoại:</label>
      <input
        type="text"
        id="phone"
        name="phone"
        value="<%= lecturer.phone %>"
        required
      /><br /><br />
      <input
        type="submit"
        value="Lưu"
      />
    </form>

    <script>
      document.getElementById('edit-form').addEventListener('submit', function (event) {
        event.preventDefault(); // Ngăn form tự động submit

        const form = event.target;
        const formData = new FormData(form);

        const data = new URLSearchParams(formData);

        fetch(`/save-lecturer/${formData.get('id')}`, {
          method: 'POST',
          headers: {
            Authorization: `Bearer ${localStorage.getItem('token')}`,
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: data,
        })
          .then((response) => response.text())
          .then((data) => {
            // Hiển thị thông báo từ server
            // document.body.innerHTML = data;  
            alert(data);
          })
          .catch((error) => {
            console.error('Lỗi:', error);
          });
      });
    </script>
  </body>
</html>
